{
  "name": "crm",
  "version": "1.0.0",
  "description": "CRM application for Nextcloud with Markdown-CRM integration",
  "main": "js/main.js",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "scripts": {
    "dev": "webpack --config webpack.config.js --mode development",
    "build": "webpack --config webpack.config.js --mode production",
    "watch": "webpack --config webpack.config.js --mode development --watch",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:php": "php vendor-bin/phpunit/vendor/phpunit/phpunit/phpunit tests -c tests/phpunit.xml --colors=always",
    "test:php:coverage": "php vendor-bin/phpunit/vendor/phpunit/phpunit/phpunit tests -c tests/phpunit.xml --coverage-html tests/coverage-php",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:php && npm run test:e2e",
    "test:install": "npm install && (composer install --dev || echo 'Composer not installed. See INSTALL_PHP_WINDOWS.md') && npx playwright install"
  },
  "keywords": [
    "nextcloud",
    "crm",
    "markdown",
    "yaml"
  ],
  "author": "LÃ©o Dupont <leo.dupontrenoux@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.9",
    "@vue/test-utils": "^2.4.0",
    "@vue/vue3-jest": "^29.0.0",
    "babel-jest": "^29.5.0",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "vue": "^3.5.25",
    "vue-loader": "^17.4.2",
    "vue-style-loader": "^4.1.3",
    "vue-template-compiler": "^2.7.16",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@nextcloud/vue": "^9.3.0",
    "axios": "^1.13.2",
    "flatpickr": "^4.6.13",
    "lucide": "^0.542.0",
    "markdown-crm": "github:lasagne20/Markdown-CRM",
    "obsidian": "^1.8.7"
  }
}
